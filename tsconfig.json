{
  "compilerOptions": {
    "target": "es2021",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "useUnknownInCatchVariables": false,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "assets/*": [
        "./assets/*"
      ],
      "components/*": [
        "./components/*"
      ],
      "constants/*": [
        "./constants/*"
      ],
      "connection/*": [
        "./connection/*"
      ],
      "hooks/*": [
        "./hooks/*"
      ],
      "lib/*": [
        "./lib/*"
      ],
      "state": [
        "./state"
      ],
      "state/*": [
        "./state/*"
      ],
      "theme": [
        "./theme"
      ],
      "theme/*": [
        "./theme/*"
      ],
      "utils/*": [
        "./utils/*"
      ],
      "pages/*": [
        "./pages/*"
      ],
      "types/*": [
        "./types/*"
      ],
      "@symmio/frontend-sdk/*": [
        "../../packages/core/src/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}